{
  "name": "patternplate-media",
  "description": "Publishing repository for shared web assets",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "yarn optimize:images",
    "optimize:images": "imagemin \"src/images/**/*\" --out-dir=docs/images",
    "precommit": "lint-staged",
    "screenshot:site": "patternplate-screenshot --url='http://localhost:1337/' --out='src/images/screenshot-site.svg'",
    "screenshot:getting-started": "patternplate-screenshot --url='http://localhost:1337/?screenshot=true' --out='src/images/screenshot-hello-world.svg'",
    "screenshot:button": "patternplate-screenshot --url='http://localhost:1337/pattern/button?components-enabled=true&screenshot=true' --view-box='0 0 400 240' --no-out-width --out src/images/screenshot-button.svg",
    "screenshot:button-markup": "patternplate-screenshot --url='http://localhost:1337/pattern/button?components-enabled=true&screenshot=true' --view-box='0 0 500 240' --no-out-width --out src/images/screenshot-button-markup.svg",
    "screenshot:button-styled": "patternplate-screenshot --url='http://localhost:1337/pattern/button?components-enabled=true&screenshot=true' --view-box='0 0 500 240' --no-out-width --out src/images/screenshot-button-styled.svg",
    "screenshot:documentation": "patternplate-screenshot --url='http://localhost:1337/pattern/hello-world?components-enabled=true&screenshot=true#behaviour' --view-box='0 300 1024 800' --out-height=500 --no-out-width --out src/images/screenshot-doc-pattern-markdown.svg",
    "screenshot:documentation-pattern-json": "patternplate-screenshot --url='http://localhost:1337/pattern/hello-world?components-enabled=true&screenshot=true#behaviour' --view-box='0 300 1024 800' --out-height=500 --no-out-width --out src/images/screenshot-doc-pattern-json.svg"
  },
  "lint-staged": {
    "src/images/**/*.{png,gif}": [
      "imagemin --out-dir=docs/images",
      "git add docs"
    ],
    "src/images/**/*.svg": [
      "node ./copy-file --out-dir=docs/images",
      "git add docs"
    ],
    "src/logo/**/*": [
      "node ./copy-file --out-dir=docs/logo",
      "git add docs"
    ]
  },
  "author": {
    "name": "Mario Nebl",
    "email": "mario.nebl@sinnerschrader.com"
  },
  "repository": {
    "type": "git",
    "url": "patternplate/patternplate"
  },
  "devDependencies": {
    "@marionebl/sander": "^0.6.1",
    "@patternplate/cli": "^2.0.0-73",
    "@patternplate/render-default": "^2.0.0-73",
    "@patternplate/screenshot": "^2.0.0-73",
    "husky": "^0.14.3",
    "imagemin-cli": "^3.0.0",
    "lint-staged": "^7.0.0",
    "lodash": "^4.17.5",
    "yargs-parser": "^9.0.2"
  }
}
